                <button name="vote" value="reset" onclick="send()" class="button button3">Reset</button>
                <div id="space"></div>
                <div id="space"></div>
                <div id="results"> Cats - @ViewBag.value1 | Dogs - @ViewBag.value2 </div>
            </div>
         </center>
   </form>
</div>

